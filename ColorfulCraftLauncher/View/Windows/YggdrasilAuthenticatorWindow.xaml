<hc:Window x:Class="ColorfulCraftLauncher.YggdrasilAuthenticatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorfulCraftLauncher"
        xmlns:hc="https://handyorg.github.io/handycontrol" 
           mc:Ignorable="d"
        Title="外置登录" Height="222" Width="350" >
    <Grid Margin="0,0,0,2" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="274*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>

        <Button Content="确定" Margin="62,146,0,0" VerticalAlignment="Top" Width="226" Height="28" Click="Button_Click" Grid.ColumnSpan="3" HorizontalAlignment="Left"/>
        <Label Content="服务器" Margin="44,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.567,0.273" Width="58" HorizontalAlignment="Left"/>
        <Label Content="密码" Margin="44,90,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.567,0.273" Width="58" HorizontalAlignment="Left"/>
        <TextBox x:Name="tb1" HorizontalAlignment="Left" Margin="119,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Grid.ColumnSpan="3" Text="{Binding Server}"/>
        <TextBox x:Name="tb2"  HorizontalAlignment="Left" Margin="119,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Grid.ColumnSpan="3" Text="{Binding Email}"/>
        <TextBox x:Name="tb3" HorizontalAlignment="Left" Margin="119,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Grid.ColumnSpan="3" Text="{Binding Passwd}"/>
        <Label Content="邮箱" Margin="44,57,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.567,0.273" HorizontalAlignment="Left" Width="58">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.205"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>


    </Grid>
</hc:Window>
