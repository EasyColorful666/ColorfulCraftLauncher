<hc:Window x:Class="ColorfulCraftLauncher.OfflineAuthenticatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorfulCraftLauncher"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol"  d:DataContext="{d:DesignInstance Type=local:OfflineAuthenticatorViewModel}"
           Title="离线登录" Height="200" Width="350" ShowIcon="False">
    <Grid>
        <Button Content="确定" Margin="49,121,0,0" VerticalAlignment="Top" Width="252" Height="42" Grid.ColumnSpan="2" HorizontalAlignment="Left" Click="Button_Click"/>
        <Label Content="用户名" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb1" HorizontalAlignment="Left" Margin="73,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" Text="{Binding SendInfo}" />
        
    </Grid>
</hc:Window>
